{% extends 'base.html.twig' %}

{% block title %}Editeur{% endblock %}

{% block body %}
    {% block stylesheets %}
        <link href="{{ asset('back/js/dataTables/dataTables.bootstrap.css ')}}" />
    {% endblock %}


    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <tbody>

            <tr>
                <th>Nom Editeur</th>
                <td>{{ editeur.nomEditeur }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ editeur.pays }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ editeur.adresse }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ editeur.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container">
        <div class="row">
            <div class="col col-lg-6"><a href="{{ path('editeur_index') }}"> <span class="btn btn-primary"><i class="fa fa-backward"></i> &nbsp;Retour</span></a>
            &nbsp;
                <a href="{{ path('editeur_edit', {'id': editeur.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i> &nbsp;Editer</span></a>

            </div>
            {{ include('editeur/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}
{% block javascripts %}

    <script src="{{ asset('back/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('back/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
