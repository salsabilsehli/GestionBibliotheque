{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    {% block stylesheets %}
        <link href="{{ asset('back/js/dataTables/dataTables.bootstrap.css ')}}" />
    {% endblock %}


    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ livre.nbpage }}</td>
            </tr>
            <tr>
                <th>Date Edition</th>
                <td>{{ livre.dateEdition ? livre.dateEdition|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'exemplaires</th>
                <td>{{ livre.nbExemplaire }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ livre.editeur.nomEditeur }}</td>
            </tr>
            <tr>
                <th>Cat√©gorie</th>
                <td>{{ livre.categorie.designation }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>
                    {% for auteur in livre.auteurs %}
                        <span class="badge badge-primary">
                            {{ auteur.prenom }}  {{ auteur.nom }}
                        </span>

                    {% endfor %}

                </td>
            </tr>

            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
        </tbody>
    </table>

    <div class="container">
        <div class="row">
            <div class="col col-lg-6"><a href="{{ path('livre_index') }}"> <span class="btn btn-primary"><i class="fa fa-backward"></i> &nbsp;Retour</span></a>
                &nbsp;
                <a href="{{ path('livre_edit', {'id': livre.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i> &nbsp;Editer</span></a>

            </div>
            {{ include('livre/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}
{% block javascripts %}

    <script src="{{ asset('back/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('back/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
