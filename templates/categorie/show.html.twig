{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    {% block stylesheets %}
        <link href="{{ asset('back/js/dataTables/dataTables.bootstrap.css ')}}" />
    {% endblock %}


    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <tbody>

            <tr>
                <th>Désignation</th>
                <td>{{ categorie.designation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
        </tbody>
    </table>





<div class="container">
    <div class="row">
        <div class="col col-lg-6"><a href="{{ path('categorie_index') }}"> <span class="btn btn-primary"><i class="fa fa-backward"></i> &nbsp;Retour</span></a>
            &nbsp;
            <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><span class="btn btn-success"><i class="fa fa-pencil"></i> &nbsp;Editer</span></a>

        </div>
        {{ include('categorie/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
{% block javascripts %}

    <script src="{{ asset('back/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('back/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
