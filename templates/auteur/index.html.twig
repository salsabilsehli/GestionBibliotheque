{% extends 'base.html.twig' %}

{% block title %}Index Auteur{% endblock %}


{% block stylesheets %}
    <link href="{{ asset('back/js/dataTables/dataTables.bootstrap.css ')}}" />
{% endblock %}

{% block body %}

    <div>
        <a href="{{ path('nouvel_auteur') }}"><span class="btn btn-primary"><i class="fa fa-plus">&nbsp;Nouveau</i></span></a>
    </div>
    <br>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
              <tr>
                  <th>#</th>
                  <th>Prenom</th>
                  <th>Nom</th>
                  <th>Biographie</th>
                  <th>Actions</th>

              </tr>

        </thead>

        <tbody>
        {% for c,a in ListeAuteurs %}
            <tr>
                <td> {{c +1 }}</td>
                <td> {{a.prenom }}</td>
                <td> {{a.nom }}</td>
                <td> {{a.biographie}}</td>
                <td>
                    <a href="{{ path('afficher_auteur' ,{'id': a.id}) }}" ><span class="btn btn-default"><i class="fa fa-eye" > </i></span>  </a> &nbsp;
                    <a href="{{ path('edit_auteur', {'id': a.id}) }}" ><span class="btn btn-success"><i class="fa fa-pencil"></i></span>  </a> &nbsp;
                    <a href="{{ path('delete_auteur',  {'id': a.id})}}" ><span class="btn btn-danger"><i class="fa fa-trash-o"></i></span>  </a>
                </td>

            </tr>
        {% endfor %}

        </tbody>
    </table>


{% endblock %}

{% block javascripts %}

    <script src="{{ asset('back/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('back/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
